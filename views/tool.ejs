<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
            google: {
                families: ['Ms Madi', 'Updock', 'My Soul', 'Bebas Neue', 'Orelega One', 'Anton', 'Pacifico', 'Permanent Market', 'Righteous', 'Abril Fatface']
            }
        });
    </script>
    <title>Meme Tool</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>

        <div class="container-fluid mt-4">
            <div class="row">
                <div class="col-md-4 row">
                    <div class="col-md-4">
                        <!-- Tab navs -->
                        <div class="nav flex-column nav-tabs text-center" id="v-tabs-tab" role="tablist"
                            aria-orientation="vertical">
                            <a class="nav-link active" id="v-tabs-home-tab" data-mdb-toggle="tab" href="#v-tabs-home"
                                role="tab" aria-controls="v-tabs-home" aria-selected="true">
                                <img class="mb-1" src="images/typography.png" alt="typography" height="50" width="50">
                                Typography
                            </a>
                            <a class="nav-link" id="v-tabs-profile-tab" data-mdb-toggle="tab" href="#v-tabs-profile"
                                role="tab" aria-controls="v-tabs-profile" aria-selected="false">
                                <img class="mb-1" src="images/shapes.png" alt="" height="50" width="50">
                                Shapes</a>
                            <a class="nav-link" id="v-tabs-messages-tab" data-mdb-toggle="tab" href="#v-tabs-messages"
                                role="tab" aria-controls="v-tabs-messages" aria-selected="false">Emojis</a>
                        </div>
                        <!-- Tab navs -->
                    </div>

                    <div class="col-md-8">
                        <!-- Tab content -->
                        <div class="tab-content" id="v-tabs-tabContent">
                            <div class="tab-pane fade show active" id="v-tabs-home" role="tabpanel"
                                aria-labelledby="v-tabs-home-tab">
                                Home content
                            </div>
                            <div class="tab-pane fade" id="v-tabs-profile" role="tabpanel"
                                aria-labelledby="v-tabs-profile-tab">
                                Profile content
                            </div>
                            <div class="tab-pane fade" id="v-tabs-messages" role="tabpanel"
                                aria-labelledby="v-tabs-messages-tab">
                                Messages content
                            </div>
                        </div>
                        <!-- Tab content -->
                    </div>
                </div>



                <div class="col-md-8">
                    <canvas id="MemeCanvas"></canvas>
                </div>
            </div>
        </div>


        <!-- MDB -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
            
        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.js"></script>

        <script src="https://unpkg.com/fabric@5.2.1/dist/fabric.min.js"></script>

        <script src="js/main.js"></script>
</body>

</html>